{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": false, // Set to true for stricter checks once stable
      "rootDir": "src",
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2020",     // Match your Node.js version capabilities
      "skipLibCheck": true,   // Important for avoiding type errors in node_modules
      "resolveJsonModule": true,
      "esModuleInterop": true // Good for interoperability with CommonJS modules
    },
    "compileOnSave": true,
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "lib"
    ]
  }
